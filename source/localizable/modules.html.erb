---

<section>
  <div class="container pt-6 pb-6 md:pt-24 md:pb-12">
    <div class="md:w-3/5 space-y-6">
      <h1 class="h1 md:whitespace-nowrap">
        <%= t("modules.title") %>
      </h1>
      <p class="par-xl text-gray-500">
        <%= t("modules.subtitle") %>
      </p>
    </div>

    <div class="flex flex-col divide-y-2 md:divide-y-0 divide-red-500 border-red-500 border-y-2 md:border-y-0 md:flex-row md:space-x-16 mt-16">
      <%= partial "/partials/cta-bare", locals: { classes: "text-red-500", icon: "ri-book-3-line", text: t("nav.docs.title"), url: "https://docs.decidim.org" } %>
    </div>
  </div>
</section>

<section>
  <div class="container py-6 md:py-24 flex flex-col md:flex-row items-start gap-6" data-filter>
    <div class="w-full md:w-1/4 md:sticky top-0">
      <div class="flex md:flex-col gap-6 md:gap-0 mb-8">
        <a class="block truncate par-md py-3 text-gray-500 hover:text-red-500 border-b-4 border-gray-100 hover:border-red-500 transition" href="#official"><%= t("modules.official") %></a>
        <a class="block truncate par-md py-3 text-gray-500 hover:text-red-500 border-b-4 border-gray-100 hover:border-red-500 transition" href="#community"><%= t("modules.community") %></a>
        <a class="block truncate par-md py-3 text-gray-500 hover:text-red-500 border-b-4 border-gray-100 hover:border-red-500 transition" href="#auth"><%= t("modules.auth") %></a>
      </div>
      <div class="relative">
        <input class="bg-gray-100 rounded-xl w-full py-3 pl-9 pr-6 par-md relative placeholder:text-gray-500" type="text" placeholder="<%= t('modules.placeholder') %>">
        <%= icon "ri-search-line", class: "text-gray-500 absolute top-1/2 -translate-y-1/2 left-3 w-4 h-4" %>
      </div>
    </div>
    <div class="md:w-3/4">
      <% modules = data_sort_by_title(data.modules) %>
      <% official = data_select_by(modules, "official") %>
      <% community = data_select_by(modules, "community") %>
      <% auth = data_select_by(modules, "auth") %>

      <h4 id="official" class="h4 mb-6 md:mb-10"><%= t("modules.official") %></h4>
      <div class="divide-y-4 border-y-4 border-gray-100 divide-gray-100 overflow-hidden">
        <% official.each do |id, m| %>
          <%= partial "/partials/module-item", locals: { item: m } %>
        <% end %>
      </div>

      <div class="hidden md:block py-20">
        <p class="par-xl max-w-prose text-gray-500 mb-8"><%= t("modules.develop") %></p>
        <%= partial "/partials/cta-bare", locals: { classes: "text-red-500", text: t("modules.cta"), url: "https://docs.decidim.org" } %>
      </div>

      <h4 id="community" class="h4 mb-6 md:mb-10"><%= t("modules.community") %></h4>
      <div class="divide-y-4 border-y-4 border-gray-100 divide-gray-100 overflow-hidden">
        <% community.each do |id, m| %>
          <%= partial "/partials/module-item", locals: { item: m } %>
        <% end %>
      </div>

      <h4 id="auth" class="h4 mt-20 mb-6 md:mb-10"><%= t("modules.auth") %></h4>
      <div class="divide-y-4 border-y-4 border-gray-100 divide-gray-100 overflow-hidden">
        <% auth.each do |id, m| %>
          <%= partial "/partials/module-item", locals: { item: m } %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%= partial "/partials/faq" %>

<%= partial "/partials/cta-banner" %>
